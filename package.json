{
  "name": "30daysofweb3-rsvp",
  "keywords": [
    "web3",
    "30daysofweb3",
    "dapp"
  ],
  "author": "Naomi Hauret",
  "license": "MIT",
  "version": "1.0.0",
  "description": "A full-stack RSVP dapp built during 30 Days of Web3 curriculum.",
  "scripts": {
    "contracts:prettier": "pnpm --filter smartcontracts run prettier",
    "contracts:test": "pnpm --filter smartcontracts run test",
    "contracts:deploy": "pnpm --filter smartcontracts run compile && pnpm --filter smartcontracts run deploy",
    "dapp:dev": "pnpm --filter frontend run dev"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
